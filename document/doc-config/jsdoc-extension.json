{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": [
            "jsdoc",
            "closure"
        ]
    },
    "source": {
        "include": [
            "src/extension/library"
        ],
        "exclude": [
            "src/extension/eclat",
            "src/extension/components",
            "src/extension/ecosystem"
        ],
        "includePattern": "\\.(js|jsx|css)$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "outputSourceFiles": false,
            "staticFiles": {
                "include": [
                    "document/doc-config/tpl"
                ]
            }
        }
    },
    "opts": {
        "template": "node_modules/docdash",
        "encoding": "utf8",
        "destination": "document/doc-web-extension",
        "recurse": true
    },
    "docdash": {
        "static": true,
        "meta": {
            "title": "Zero Extension框架专用前端文档",
            "description": "前端开发框架，官方地址：http://www.vertx-ui.cn",
            "keyword": "zero,zero-extension,vert.x"
        },
        "collapse": false,
        "search": true,
        "private": true,
        "menu": {
            "Zero Api": {
                "href": "http://www.vertxui.cn/document/doc-web/index.html",
                "class": "menu-item",
                "id": "website_link"
            },
            "Zero Extension": {
                "href": "http://www.vertxui.cn/document/doc-web-extension/index.html",
                "class": "menu-item",
                "id": "website_link"
            },
            "Zero UI": {
                "href": "http://www.vertxui.cn",
                "target": "_blank",
                "class": "menu-item",
                "id": "website_link"
            },
            "Zero Epic Fabric": {
                "href": "http://www.vertxup.cn",
                "target": "_blank",
                "class": "menu-item",
                "id": "website_link"
            },
            "Origin X Engine": {
                "href": "http://www.origin-x.cn",
                "target": "_blank",
                "class": "menu-item",
                "id": "website_link"
            }
        }
    }
}