{
    "_form": {
        "ui": [
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ],
            [
                "title=基本信息"
            ],
            [
                {
                    "metadata": "name,名称,8,,,placeholder=请输入名称",
                    "optionConfig.rules": [
                        "required,请输入名称，名称不可为空！"
                    ]
                },
                {
                    "metadata": "code,编码,8,,,placeholder=请输入唯一编码",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，编码重复！",
                            "config": {
                                "uri": "/api/x-category/existing",
                                "method": "POST",
                                "params": {
                                    "type": "FORM:type",
                                    "sigma":"PROP:app.sigma"
                                }
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "parentName,父类型,8,,aiTreeSelector,placeholder=（请选择）",
                    "optionJsx.config":{
                        "ajax":{
                            "uri":"/api/type/categories/:type",
                            "magic":{
                                "type":"ROUTE:type"
                            }
                        },
                        "linker": {
                            "name": "parentName",
                            "key":"parentId"
                        },
                        "selection":{
                            "multiple": false,
                            "checkStrictly":true
                        },
                        "tree":{
                            "title":"name"
                        },
                        "validation": "请选择父类！",
                        "window": "选择父类型,选择,关闭,false,400,false"
                    },
                    "optionJsx.allowClear":true
                }
            ],
            [
                {
                    "metadata": "leaf,叶节点,8,,aiCheckbox",
                    "optionConfig":{
                        "valuePropName":"checked"
                    }
                },
                {
                    "metadata": "active,是否启用,8,,aiCheckbox",
                    "optionConfig":{
                        "valuePropName":"checked"
                    }
                }
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea",
                    "optionJsx.rows": 4
                }
            ]
        ],
        "hidden": [
            "key",
            "type",
            "identifier",
            "parentId"
        ],
        "op": {
            "$opSave": "act.category.save",
            "$opDelete": "act.category.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的信息更新成功！",
            "removed": "当前记录删除成功！"
        }
    }
}