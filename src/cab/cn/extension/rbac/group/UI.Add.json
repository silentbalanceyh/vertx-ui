{
    "_form": {
        "window": 0.15,
        "ui": [
            [
                "title=组基本信息"
            ],
            [
                {
                    "metadata":"name,名称,14",
                    "optionConfig.rules":[
                        "required,请输入名称，名称不可为空！"
                    ]
                }
            ],
            [
                {
                    "metadata": "code,编码,14,,,placeholder=（根据规范编码全大写，如G10 - GROUP.COMPANY）",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，编码重复！",
                            "config": {
                                "uri": "/api/group/existing",
                                "method": "POST",
                                "params": {}
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "parentId,父组,14,,aiTreeSelect,placeholder=（不选择则无父组）",
                    "optionJsx.config.datum": "source=ajax.groups,value=key,label=name",
                    "optionJsx.config.tree":"text=name,parent=parentId",
                    "optionJsx.config.selection":"mode=FULL",
                    "optionJsx.allowClear":true
                }
            ],
            [
                "category,组类型,14"
            ],
            [
                {
                    "metadata": "active,启用,14,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
        ],
        "initial":{
            "active":"BOOL:true"
        },
        "op": {
            "$opAdd": "act.group.add"
        }
    },
    "_modal": {
        "success": {
            "added": "您好，您的用户组信息添加成功！"
        }
    }
}