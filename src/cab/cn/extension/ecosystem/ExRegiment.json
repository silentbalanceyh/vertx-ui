{
    "_regiment": {
        "divider": {
            "text": "已选择列表",
            "color": "green"
        },
        "search": {
            "placeholder": "输入CI编号或名称",
            "condition": [
                "code,c",
                "name,c"
            ]
        },
        "category": {
            "source": "data.category",
            "tree": "text=name",
            "selected": {
                "condition": {
                    "1": "categorySecond",
                    "2": "categoryThird"
                },
                "clean": "选择类型：:value"
            }
        },
        "ajax": {
            "uri": "/api/ox/ci.device/search",
            "method": "POST",
            "magic": {
            }
        },
        "submit": {
            "className": "ux-hidden",
            "id": "$opSaveCi",
            "validation": "请选择您要添加的配置项信息！"
        },
        "remove": "放弃",
        "table": {
            "rowKey": "key",
            "columns": [
                {
                    "dataIndex": "code",
                    "title": "配置项编号"
                },
                {
                    "dataIndex": "name",
                    "title": "配置项名称"
                },
                {
                    "dataIndex": "status",
                    "title": "状态",
                    "$render": "DATUM",
                    "$datum": "source=ci.status,value=key,display=name"
                },
                {
                    "dataIndex": "categoryFirst",
                    "title": "一级分类",
                    "$render": "DATUM",
                    "$datum": "source=data.category,value=key,display=name"
                },
                {
                    "dataIndex": "categorySecond",
                    "title": "二级分类",
                    "$render": "DATUM",
                    "$datum": "source=data.category,value=key,display=name"
                },
                {
                    "dataIndex": "categoryThird",
                    "title": "三级分类",
                    "$render": "DATUM",
                    "$datum": "source=data.category,value=key,display=name"
                }
            ]
        }
    }
}