{
    "_form": {
        "columns": 2,
        "ui": [
            [
                "serial,单号,,,aiMagic",
                "amountRequired,总金额,,,aiMagic"
            ],
            [
                "name,标题,,,,placeholder=（选填）",
                {
                    "metadata": "amount,金额,,50%,,addonAfter=￥,normalize=decimal:12:2",
                    "optionConfig.rules": [
                        "required,请输入金额信息！",
                        {
                            "validator": "lessOr",
                            "message": "该金额必须小于总金额，请重新填写！",
                            "config": {
                                "to": "amountRequired"
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "payMethod,方式,,,aiSelect",
                    "optionJsx.config.datum": "source=pay.type,key=code,label=name",
                    "optionConfig.rules": [
                        "required,付款方式不可为空！"
                    ]
                },
                "payId,账号"
            ],
            [
                "payName,姓名",
                "payMobile,电话"
            ],
            [
                "comment,付款备注,24,,aiTextArea,rows=4"
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSingle,单量创建,SUBMIT,primary",
                        "$opBatch,批量创建,SUBMIT,primary"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "settlementId",
            "indent"
        ]
    },
    "_modal": {
        "success": {
            "single": "恭喜，您的付款已成功创建！"
        }
    }
}