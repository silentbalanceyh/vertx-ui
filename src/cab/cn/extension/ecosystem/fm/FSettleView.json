                    ],
                    "optionJsx.config.boolean": true
                },
                {
                    "metadata": "rounded,零头处理,,,aiMagic",
                    "optionJsx.config.items": [
                        "HALF,四舍五入",
                        "FLOOR,零头舍弃",
