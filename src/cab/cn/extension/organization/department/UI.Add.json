{
    "_form": {
        "window": 1,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "name,名称,12",
                {
                    "metadata": "code,编码,12,,,placeholder=（根据规范编码全大写，如DETP.IT）",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，编码重复！",
                            "config": {
                                "uri": "/api/dept/existing",
                                "method": "POST",
                                "params": {}
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "managerName,经理,12,,aiListSelector,placeholder=（请选择部门经理）",
                    "optionJsx.config": {
                        "ajax": {
                            "metadata": "POST,/api/user/search,1,8,sorter=createdAt`DESC"
                        },
                        "linker": {
                            "key": "managerId",
                            "realname": "managerName"
                        },
                        "table": {
                            "columns": [
                                "username,用户账号",
                                "realname,用户名称",
                                "comment,备注",
                                "mobile,手机号",
                                "email,邮箱",
                                "active,是否启用"
                            ]
                        },
                        "validation": "请选择部门经理！",
                        "window": "请选择部门经理,选择,关闭,false,800,false",
                        "search": {
                            "username,c": "账号",
                            "realname,c": "名称"
                        }
                    }
                }
            ],
            [
                {
                    "metadata": "companyId,所属公司,12,,aiTreeSelect,placeholder=（请选择所属公司）",
                    "optionJsx.config.datum": "source=resource.companys,value=key,label=name",
                    "optionJsx.config.tree":"text=name,parent=companyId",
                    "optionJsx.config.selection":"mode=FULL",
                    "optionConfig.rules":[
                        "required,请选择部门所挂靠的公司！"
                    ]
                },
                {
                    "metadata": "deptId,上级部门,12,,aiTreeSelect,placeholder=（不选择时就无上级部门）",
                    "optionJsx.config.datum": "source=resource.departments,value=key,label=name",
                    "optionJsx.config.tree":"text=name,parent=deptId",
                    "optionJsx.config.selection":"mode=FULL",
                    "optionJsx.config.cascade": {
                        "source": "companyId",
                        "target": "FORM:companyId"
                    },
                    "optionJsx.allowClear":true
                }
            ],
            [
                {
                    "metadata": "active,启用,12,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea",
                    "optionJsx.rows": 3
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "managerId"
        ],
        "op": {
            "$opAdd": "act.dept.add"
        }
    },
    "_modal": {
        "success": {
            "added": "您好，部门信息添加成功！"
        }
    }
}