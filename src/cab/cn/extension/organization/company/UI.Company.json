{

    "_form": {
        "window": 1,
        "columns":3,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "title,标题",
                {
                    "metadata":"name,名称,,,,placeholder=（必填）",
                    "optionConfig.rules":[
                        "required,请输入公司名称",
                        {
                            "validator":"existing",
                            "message":"对不起，该公司名称已经在系统中存在！",
                            "config":{
                                "uri":"/api/company/existing",
                                "method":"POST"
                            }
                        }
                    ]
                }
            ],
            [
                "code,系统编号,,,,readOnly=true",
                "homepage,主页,16"
            ],
            [
                {
                    "metadata":"phone,座机,,,,placeholder=（000-00000000）",
                    "optionConfig.rules": [
                        {
                            "pattern": "(^(\\d{3,4}-)?\\d{7,8}$)",
                            "message": "格式错误,请正确输入座机号！"
                        }
                    ]
                },
                {
                    "metadata":"email,邮箱,,,,placeholder=（xxx@xxx.xx）",
                    "optionConfig.rules": [
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "格式错误,请正确输入邮箱地址！"
                        }
                    ]
                },
                {
                    "metadata":"fax,传真,,,,placeholder=（000-00000000）",
                    "optionConfig.rules": [
                        {
                            "pattern": "(^(\\d{3,4}-)?\\d{7,8}$)",
                            "message": "格式错误,请正确输入传真号！"
                        }
                    ]
                }
            ],
            [
                "address,地址,24,,aiTextArea,rows=3"
            ],
            [
                "title=商务信息"
            ],
            [
                "taxTitle,发票抬头",
                {
                    "metadata":"taxCode,税号,,,,placeholder=由15/18/20位字符组成",
                    "optionConfig.rules": [
                        {
                            "min": 15,
                            "pattern": "^[A-Za-z0-9]{15}$|^[A-Za-z0-9]{18}$|^[A-Za-z0-9]{20}$",
                            "message": "格式错误,请正确输入税号！"
                        }
                    ]
                }
            ],
            [
                "corporationName,法人,,,,placeholder=（如：王**等）",
                {
                    "metadata":"corporationPhone,法人手机,,,,placeholder=请输入法人手机",
                    "optionConfig.rules": [
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "格式错误,请正确输入法人手机！"
                        }
                    ]
                }
            ],
            [
                "contactName,联系人姓名,,,,placeholder=（如：王**等）",
                {
                    "metadata":"contactPhone,联系人手机,,,,placeholder=请输入联系人手机",
                    "optionConfig.rules": [
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "格式错误,请正确输入联系人手机！"
                        }
                    ]
                }
            ],
            [
                "comment,简介,24,,aiTextArea,rows=3"
            ],
            [
                {
                    "metadata": "$button",
                    "optionJsx.extension": [
                        "$opSaveMy,保存,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ]
                }
            ]
        ],
        "hidden": [
            "key"
        ],
        "op": {
            "$opSaveMy": "act.company.save"
        }
    },
    "_modal": {
        "success": {
            "savedMy": "您好，您的公司信息已经成功保存！"
        }
    }
}