{
    "_form": {
        "window": 1,
        "columns": 3,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                {
                    "metadata": "code,编码,,,,placeholder=（品牌编码不能重复）,maxLength=32",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，品牌编码重复！",
                            "config": {
                                "uri": "/api/brand/existing",
                                "method": "POST",
                                "params": {
                                    "sigma": "PROP:app.sigma"
                                }
                            }
                        }
                    ]
                },
                {
                    "metadata": "name,名称,,,,placeholder=请输入品牌名称,normalize=text:40",
                    "optionConfig.rules": [
                        "required,请输入品牌名称"
                    ]
                },
                {
                    "metadata": "alias,别名,,,,placeholder=请输入品牌别名,maxLength=255",
                    "optionConfig.rules": [
                        "required,请输入品牌别名"
                    ]
                }
            ],
            [
                {
                    "metadata": "companyName,公司名,,,,placeholder=请输入品牌公司名,maxLength=20",
                    "optionConfig.rules": [
                        "required,请输入品牌公司名"
                    ]
                },
                {
                    "metadata": "categoryCode,类别代码,,,,placeholder=请输入类别代码,maxLength=20",
                    "optionConfig.rules": [
                        "required,请输入类别代码"
                    ]
                },
                {
                    "metadata": "categoryName,类别名称,,,,placeholder=请输入类别名称,maxLength=20",
                    "optionConfig.rules": [
                        "required,请输入类别名称"
                    ]
                }
            ],
            [
                {
                    "metadata": "area,GB/T2659-2000国际标准区域码,,,,placeholder=请输入GB/T2659-2000国际标准区域码,maxLength=20",
                    "optionConfig.rules": [
                        "required,请输入GB/T2659-2000国际标准区域码"
                    ]
                },
                {
                    "metadata": "areaName,区域名称,,,,placeholder=请输入区域名称,maxLength=20",
                    "optionConfig.rules": [
                        "required,请输入区域名称"
                    ]
                },
                {
                    "metadata": "areaCategory,区域类别码,,,,placeholder=请输入区域类别码,maxLength=20",
                    "optionConfig.rules": [
                        "required,请输入区域类别码"
                    ]
                }
            ],
            [
                {
                    "metadata": "active,启用,,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ]
                }
            ]
        ],
        "initial": {
            "active": "BOOL:true"
        },
        "hidden": [],
        "op": {
            "$opAdd": "act.brand.add"
        }
    },
    "_modal": {
        "success": {
            "added": "您好，您的品牌信息已经成功保存！"
        }
    }
}