{
    "_form": {
        "columns": 1,
        "modal": {
            "success": {
                "added": "您好，您的公告信息已经添加成功！"
            }
        },
        "op": {
            "$opAdd": "act.notice.add"
        },
        "ui": [
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary,,,closable=true,callback=added",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ],
            [
                "title=公告内容"
            ],
            [
                {
                    "metadata": "name,公告标题,18,,,placeholder=请输入唯一标题,normalize=text:100",
                    "optionConfig.rules": [
                        "required,请输入公告标题，标题不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，公告标题重复！",
                            "config": {
                                "uri": "/api/x-notice/existing",
                                "method": "POST",
                                "params": {
                                    "appId": "PROP:app.key"
                                }
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "status,状态,9,,aiSelect",
                    "optionJsx.config.items": [
                        "RUNNING,发布中",
                        "FINISHED,已结束"
                    ],
                    "optionConfig.rules": [
                        "required,公告状态不可为空，必须填写！"
                    ]
                },
                {
                    "metadata": "expiredAt,截止时间,9,,aiDatePicker",
                    "optionJsx.format": "YYYY-MM-DD HH:mm",
                    "optionJsx.disabledDate": "propFromNow",
                    "moment": true
                }
            ],
            [
                "content,公告内容,18,,aiBraftEditor"
            ]
        ],
        "hidden": [
            "appId",
            "type"
        ],
        "initial": {
            "status": "FIX:RUNNING",
            "type": "FIX:HOME",
            "appId": "PROP:app.key"
        }
    }
}