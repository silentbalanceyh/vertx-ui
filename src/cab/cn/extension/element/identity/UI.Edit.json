{

    "_form": {
        "window": 1,
        "columns":3,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                "realname,姓名",
                "code,编号,,,,readOnly=true",
                {
                    "metadata": "gender,性别,,,aiRadio",
                    "optionJsx.config.items": [
                        "true,男",
                        "false,女"
                    ]
                }
            ],
            [
                "country,国籍",
                "nation,民族",
                {
                    "metadata": "marital,婚姻状况,,,aiRadio",
                    "optionJsx.config.items": [
                        "MARRIED,已婚",
                        "UNMARRIED,未婚"
                    ]
                }
            ],
            [
                "nativePlace,籍贯",
                {
                    "metadata":"birthday,出生日期,,,aiDatePicker",
                    "optionJsx.format": "YYYY-MM-DD",
                    "moment": true
                },
                {
                    "metadata": "type,类型,,,aiSelect,placeholder=（请选择类型）",
                    "optionJsx.config.datum": "source=identity.type,value=key,label=name"
                }
            ],
            [
                "driverLicense,驾驶证",
                "passport,护照",
                {
                    "metadata": "verified,验证/备案,,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                "address,居住地址,24,,aiTextArea,rows=2"
            ],
            [
                {
                    "metadata": "active,启用,,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                "title=联系信息"
            ],
            [
                {
                    "metadata":"contactMobile,手机号,,,,placeholder=请输入手机号",
                    "optionConfig.rules": [
                        "required,请输入手机号，手机号不能为空",
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "格式错误,请正确输入手机号！"
                        }
                    ]
                },
                {
                    "metadata":"contactPhone,座机,,,,placeholder=（XXX-XXXXXXXX格式）",
                    "optionConfig.rules": [
                        "required,请输入座机号，座机号不能为空",
                        {
                            "pattern": "[0-9-()（）]{7,18}",
                            "message": "格式错误,请正确输入座机号！"
                        }
                    ]
                },
                {
                    "metadata":"contactEmail,邮箱,,,,placeholder=（XXX@XXX格式）",
                    "optionConfig.rules": [
                        "required,请输入电子邮箱",
                        {
                            "pattern": "\\w[-\\w.+]*@([A-Za-z0-9][-A-Za-z0-9]+\\.)+[A-Za-z]{2,14}",
                            "message": "格式错误,请正确输入邮箱地址！"
                        }
                    ]
                }
            ],
            [
                "ecQq,QQ号码",
                "ecWechat,微信",
                "ecAlipay,支付宝"
            ],
            [
                "urgentName,紧急联系人,,,,placeholder=（如：张**、王**等）",
                {
                    "metadata":"urgentPhone,紧急联系电话,,,,placeholder=请输入紧急联系电话",
                    "optionConfig.rules": [
                        "required,请输入紧急联系电话，紧急联系电话不能为空",
                        {
                            "max": 11,
                            "pattern": "0?(13|14|15|18|17)[0-9]{9}",
                            "message": "格式错误,请正确输入紧急联系电话！"
                        }
                    ]
                }
            ],
            [
                "contactAddress,联系地址,24,,aiTextArea,rows=2"
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key"
        ],
        "op": {
            "$opSave": "act.identity.save",
            "$opDelete": "act.identity.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的档案信息已经编辑成功！",
            "removed": "您好，您的档案信息已经删除保存！"
        }
    }
}