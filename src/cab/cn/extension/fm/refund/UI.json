{
    "_assist": {
        "tabular": {
            "uri": "/api/types/tabulars",
            "method": "POST",
            "magic": {
                "$body": [
                    "bill.type",
                    "bill.status",
                    "bill.category",
                    "pay.term.type"
                ]
            },
            "group": "type"
        }
    },
    "_grid": {
        "query": {
            "criteria": {
                "sigma": "PROP:app.sigma",
                "": true,
                "amount,<": 0,
                "finished": false
            }
        },
        "module": {
            "NAME": "退款单",
            "MODULE": "debt",
            "IDENTIFIER": "fm.debt"
        },
        "options": {
            "search.advanced": false,
            "dynamic.column": false,
            "op.row.edit": true,
            "op.row.delete": false,
            "tabs.edit": "退款处理"
        },
        "table": {
            "columns": [
                {
                    "title": "操作",
                    "dataIndex": "key",
                    "fixed": "left",
                    "width": 80,
                    "$render": "EXECUTOR",
                    "$option": [
                        {
                            "text": "处理退款",
                            "executor": "fnEdit"
                        }
                    ]
                },
                "serial,退款单号",
                "amount,结算金额,CURRENCY",
                {
                    "metadata":"settlementId,备注,USER",
                    "$config": {
                        "uri": "/api/settlement/:key",
                        "field": "comment",
                        "icon": false
                    },
                    "$empty": "（系统）",
                    "width": 300
                },
                {
                    "metadata": "finished,是否处理,LOGICAL",
                    "$mapping": {
                        "true": "已完成,check-circle,16,#268941",
                        "false": "待处理,undo,16,#fe6600"
                    }
                },
                "signName,退款人",
                "signMobile,联系手机",
                {
                    "title": "创建时间",
                    "dataIndex": "createdAt",
                    "$render": "DATE",
                    "$format": "YYYY-MM-DD HH:mm:ss"
                }
            ]
        }
    }
}