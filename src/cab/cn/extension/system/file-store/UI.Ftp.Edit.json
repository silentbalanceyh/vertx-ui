{
    "_form": {
        "ui": [
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ],
            [
                "title=基本信息"
            ],
            [
                {
                    "metadata": "name,名称,8,,,placeholder=请输入名称,normalize=text:40",
                    "optionConfig.rules": [
                        "required,请输入名称，名称不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，名称重复！",
                            "config": {
                                "uri": "/api/x-integration/existing",
                                "method": "POST",
                                "params": {
                                    "type": "FIX:ftp",
                                    "sigma": "PROP:app.sigma"
                                }
                            }
                        }
                    ]
                },
                {
                    "metadata": "type,集成类型,8,,aiSelect,readOnly=true",
                    "optionJsx.config.datum": "source=zero.integration,key=code,label=name"
                },
                "protocol,协议类型,8,,,readOnly=true"
            ],
            [
                {
                    "metadata": "hostname,主机地址,8,,,placeholder=使用主机域名",
                    "optionConfig.rules": [
                        "required,请输入主机地址，主机地址不可为空！"
                    ]
                },
                {
                    "metadata": "port,端口号,8,,aiInputNumber,min=1,max=65535",
                    "optionConfig.rules": [
                        "required,请输入端口号，端口号不可为空！"
                    ]
                }
            ],
            [
                {
                    "metadata": "ipV4,IPv4,8,,,placeholder=格式：0.0.0.0",
                    "optionConfig.rules": [
                        "required,请输入IPv4地址，IPv4地址不可为空！"
                    ]
                },
                "ipV6,IPv6,16,,,placeholder=格式：XXXX:XXXX:XXXX:XXXX:XXXX:XXXX:XXXX:XXXX"
            ],
            [
                "username,账号,8,,,placeholder=远程账号",
                "password,密码,8,,aiPassword,placeholder=远程账号密码",
                "publicKey,公钥文件,8,,,placeholder=请联系管理员录入路径"
            ],
            [
                {
                    "metadata": "endpoint,端地址,16,98%,,placeholder=上传文件的完整路径，可直接使用`ftp`命令的路径地址。",
                    "optionConfig.rules": [
                        "required,请输入端地址，端地址不可为空！"
                    ]
                },
                {
                    "metadata": "path,FTP根路径,8",
                    "optionConfig.rules": [
                        "required,请输入根路径，FTP根路径不可为空！"
                    ]
                }
            ],
            [
                {
                    "metadata": "options,额外配置,24,,aiJsonEditor",
                    "optionJsx.height": 80
                }
            ],
            [
                {
                    "metadata": "active,是否启用,8,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea,maxLength=1024",
                    "optionJsx.rows": 3,
                    "optionItem.style": {
                        "width": "99%"
                    }
                }
            ]
        ],
        "hidden": [
            "key",
            "appId"
        ],
        "op": {
            "$opSave": "act.integration.save",
            "$opDelete": "act.integration.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的FTP配置信息更新成功！",
            "removed": "当前FTP配置记录删除成功！"
        }
    }
}