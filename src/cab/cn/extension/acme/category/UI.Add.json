{
    "_form": {
        "ui": [
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opAdd,添加,SUBMIT,primary",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ],
            [
                "title=基本信息"
            ],
            [
                {
                    "metadata": "name,名称,8,,,placeholder=请输入名称,normalize=text:40",
                    "optionConfig.rules": [
                        "required,请输入名称，名称不可为空！"
                    ]
                },
                {
                    "metadata": "code,编码,8,,,placeholder=请输入唯一编码,maxLength=40",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，编码重复！",
                            "config": {
                                "uri": "/api/x-category/existing",
                                "method": "POST",
                                "params": {
                                    "type": "FORM:type",
                                    "sigma": "PROP:app.sigma"
                                }
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "parentName,父类型,8,,aiTreeSelector,placeholder=（请选择）",
                    "optionJsx.config": {
                        "ajax": {
                            "uri": "/api/type/categories/:type",
                            "magic": {
                                "type": "FORM:type"
                            }
                        },
                        "linker": {
                            "name": "parentName",
                            "key": "parentId"
                        },
                        "selection": {
                            "multiple": false,
                            "checkStrictly": true
                        },
                        "tree": {
                            "title": "name"
                        },
                        "validation": "请选择父类！",
                        "window": "选择父类型,选择,关闭,false,400,false"
                    },
                    "optionJsx.allowClear": true
                }
            ],
            [
                {
                    "metadata": "leaf,叶节点,8,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                },
                {
                    "metadata": "active,是否启用,8,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea,maxLength=1024",
                    "optionJsx.rows": 3
                }
            ]
        ],
        "hidden": [
            "type",
            "identifier",
            "parentId",
            "appId"
        ],
        "op": {
            "$opAdd": "act.category.add"
        },
        "initial": {
            "active": "BOOL:true",
            "appId": "PROP:app.key"
        }
    },
    "_modal": {
        "success": {
            "added": "您好，您的信息添加成功！"
        }
    }
}