{
    "_form": {
        "window": 0.15,
        "ui": [
            [
                "title=基本信息"
            ],
            [
                {
                    "metadata": "name,名称,14,,,placeholder=请输入名称",
                    "optionConfig.rules": [
                        "required,请输入名称，名称不可为空！"
                    ]
                }
            ],
            [
                {
                    "metadata": "code,编码,14,,,placeholder=请输入唯一编码",
                    "optionConfig.rules": [
                        "required,请输入编码，编码不可为空！",
                        {
                            "validator": "existing",
                            "message": "对不起，编码重复！",
                            "config": {
                                "uri": "/api/x-tabular/existing",
                                "method": "POST",
                                "params": {
                                    "type": "FORM:type"
                                }
                            }
                        }
                    ]
                }
            ],
            [
                {
                    "metadata": "active,启用,14,,aiCheckbox",
                    "optionConfig": {
                        "valuePropName": "checked"
                    }
                }
            ],
            [
                {
                    "metadata": "comment,备注,24,,aiTextArea",
                    "optionJsx.rows": 4
                }
            ],
            [
                {
                    "metadata": "$button",
                    "hidden": true,
                    "optionJsx.extension": [
                        "$opSave,保存,SUBMIT,primary",
                        "$opDelete,删除,KEY",
                        "$opReset,重置,RESET"
                    ],
                    "span": 24
                }
            ]
        ],
        "hidden": [
            "key",
            "type"
        ],
        "op": {
            "$opSave": "act.tabular.save",
            "$opDelete": "act.tabular.delete"
        }
    },
    "_modal": {
        "success": {
            "saved": "您好，您的信息更新成功！",
            "removed": "当前记录删除成功！"
        }
    }
}